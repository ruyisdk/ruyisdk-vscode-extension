{
  "name": "ruyisdk-vscode-extension",
  "displayName": "RuyiSDK",
  "description": "VS Code integration for the Ruyi package manager.",
  "version": "0.1.0",
  "publisher": "RuyiSDK",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruyisdk/ruyisdk-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/ruyisdk/ruyisdk-vscode-extension/issues"
  },
  "homepage": "https://github.com/ruyisdk/ruyisdk-vscode-extension#readme",
  "engines": {
    "vscode": "^1.88.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other",
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ruyi",
          "title": "Ruyi",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "ruyi": [
        {
          "id": "ruyiPackagesView",
          "name": "Packages",
          "icon": "$(package)"
        }
      ]
    },
    "commands": [
      {
        "command": "ruyi.detect",
        "title": "Detect Installation and Version",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.install",
        "title": "Install RuyiSDK",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.news.search",
        "title": "Search News",
        "category": "Ruyi",
        "icon": "$(search)"
      },
      {
        "command": "ruyi.news.clearSearch",
        "title": "Clear Search",
        "category": "Ruyi",
        "icon": "$(clear-all)"
      },
      {
        "command": "ruyi.news.showCards",
        "title": "Show News Cards",
        "category": "Ruyi",
        "icon": "$(layout)"
      },
      {
        "command": "ruyi.packages.install",
        "title": "Install Package",
        "category": "Ruyi",
        "icon": "$(cloud-download)"
      },
      {
        "command": "ruyi.packages.uninstall",
        "title": "Uninstall Package",
        "category": "Ruyi",
        "icon": "$(trash)"
      },
      {
        "command": "ruyi.packages.refresh",
        "title": "Refresh Package List",
        "category": "Ruyi",
        "icon": "$(refresh)"
      },
      {
        "command": "ruyi.venv.detect",
        "title": "Detect Ruyi Virtual Environments",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.venv.create",
        "title": "Create a New Ruyi Virtual Environment",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.venv.clean",
        "title": "Remove a non-activated Ruyi Virtual Environment",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.venv.switch",
        "title": "Activate, Deactivate or Switch Ruyi Virtual Environments",
        "category": "Ruyi"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ruyi.packages.refresh",
          "when": "view == ruyiPackagesView",
          "group": "navigation@0"
        }
      ],
      "view/item/context": [
        {
          "command": "ruyi.packages.install",
          "when": "view == ruyiPackagesView && viewItem == ruyiPackage.available",
          "group": "inline@1"
        },
        {
          "command": "ruyi.packages.uninstall",
          "when": "view == ruyiPackagesView && viewItem == ruyiPackage.installed",
          "group": "inline@1"
        }
      ],
      "commandPalette": [
        {
          "command": "ruyi.packages.install",
          "when": "false"
        },
        {
          "command": "ruyi.packages.uninstall",
          "when": "false"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/semver": "^7.7.1",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0"
  },
  "dependencies": {
    "semver": "^7.7.3"
  }
}
