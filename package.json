{
  "name": "ruyisdk-vscode-extension",
  "displayName": "RuyiSDK",
  "description": "VS Code integration for the Ruyi package manager.",
  "version": "0.1.2-beta.1",
  "publisher": "RuyiSDK",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruyisdk/ruyisdk-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/ruyisdk/ruyisdk-vscode-extension/issues"
  },
  "homepage": "https://github.com/ruyisdk/ruyisdk-vscode-extension#readme",
  "engines": {
    "vscode": "^1.88.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other",
    "Programming Languages",
    "Debuggers"
  ],
  "keywords": [
    "ruyi",
    "ruyisdk",
    "risc-v",
    "riscv",
    "toolchain",
    "package manager",
    "virtual environment",
    "sdk"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "walkthroughs": [
      {
        "id": "ruyi.welcome",
        "title": "Get started with RuyiSDK",
        "description": "Start developing for RISC-V and explore core features such as SDK management, virtual environment management, and package installation.",
        "steps": [
          {
            "id": "install",
            "title": "Install RuyiSDK",
            "description": "You can either [Install automatically](command:ruyi.setup.install) with pip(x) or download from [our website](https://ruyisdk.org/en/download/).",
            "completionEvents": [
              "onContext:ruyi.tutorial.installationComplete"
            ],
            "media": {
              "markdown": "media/install.md"
            }
          },
          {
            "id": "packages",
            "title": "Manage packages",
            "description": "You can install packages visually on RuyiSDK sidebar view.",
            "completionEvents": [
              "onView:ruyiPackagesView"
            ],
            "media": {
              "image": "media/packages.png",
              "altText": "A tree view of RuyiSDK packages"
            }
          },
          {
            "id": "venv",
            "title": "Create virtual environment",
            "description": "[Create a virtual environment](command:ruyi.venv.create) to install toolchain, (optional) emulator, and so on.",
            "completionEvents": [
              "onCommand:ruyi.venv.create"
            ],
            "media": {
              "image": "media/create-venv.png",
              "altText": "A list view of virtual environment profile"
            }
          },
          {
            "id": "activate",
            "title": "Activate virtual environment",
            "description": "Activate virtual environment in sidebar.",
            "completionEvents": [
              "onCommand:ruyi.venv.activate"
            ],
            "media": {
              "image": "media/activate-venv.png",
              "altText": "Manage virtual environment in sidebar view of RuyiSDK"
            }
          },
          {
            "id": "news",
            "title": "Read Ruyi News",
            "description": "[Read latest Ruyi News](command:ruyi.news.showCards) inside editor",
            "completionEvents": [
              "onCommand:ruyi.news.showCards"
            ],
            "media": {
              "image": "media/news.png",
              "altText": "Ruyi SDK News"
            }
          },
          {
            "id": "example",
            "title": "Build example executable",
            "description": "[Follow our guide](https://ruyisdk.org/en/docs/VSCode-Plugins/cases/case1/) to build a binary and run it on a RISC-V Development Board.",
            "media": {
              "image": "media/example.png",
              "altText": "CoreMark: Build with Extension (Example: LicheePi 4A)"
            }
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ruyi",
          "title": "Ruyi",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "ruyi": [
        {
          "id": "ruyiPackagesView",
          "name": "Packages",
          "icon": "$(package)"
        },
        {
          "id": "ruyiVenvsView",
          "name": "Virtual Environments",
          "icon": "$(server-process)"
        }
      ]
    },
    "commands": [
      {
        "command": "ruyi.setup.detect",
        "title": "Detect Ruyi Installation",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.setup.install",
        "title": "Install RuyiSDK",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.setup.update",
        "title": "Update RuyiSDK",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.setup.manage",
        "title": "Manage RuyiSDK Installations",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.news.search",
        "title": "Search News",
        "category": "Ruyi",
        "icon": "$(search)"
      },
      {
        "command": "ruyi.news.clearSearch",
        "title": "Clear Search",
        "category": "Ruyi",
        "icon": "$(clear-all)"
      },
      {
        "command": "ruyi.news.showCards",
        "title": "Show News Cards",
        "category": "Ruyi",
        "icon": "$(layout)"
      },
      {
        "command": "ruyi.packages.search",
        "title": "Search Packages",
        "category": "Ruyi",
        "icon": "$(search)"
      },
      {
        "command": "ruyi.packages.clearSearch",
        "title": "Clear Package Search",
        "category": "Ruyi",
        "icon": "$(clear-all)"
      },
      {
        "command": "ruyi.packages.install",
        "title": "Install Package",
        "category": "Ruyi",
        "icon": "$(cloud-download)"
      },
      {
        "command": "ruyi.packages.uninstall",
        "title": "Uninstall Package",
        "category": "Ruyi",
        "icon": "$(trash)"
      },
      {
        "command": "ruyi.packages.refresh",
        "title": "Refresh Package List",
        "category": "Ruyi",
        "icon": "$(refresh)"
      },
      {
        "command": "ruyi.venv.refresh",
        "title": "Detect Venvs",
        "category": "Ruyi",
        "icon": "$(refresh)"
      },
      {
        "command": "ruyi.venv.create",
        "title": "Create a New Venv",
        "category": "Ruyi",
        "icon": "$(plus)"
      },
      {
        "command": "ruyi.venv.clean",
        "title": "Remove a Venv",
        "category": "Ruyi",
        "icon": "$(trash)"
      },
      {
        "command": "ruyi.venv.activate",
        "title": "Activate Venv",
        "category": "Ruyi",
        "icon": "$(check)"
      },
      {
        "command": "ruyi.venv.deactivate",
        "title": "Deactivate Venv",
        "category": "Ruyi",
        "icon": "$(close)"
      },
      {
        "command": "ruyi.extract",
        "title": "Extract RuyiSDK Package",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.telemetry.configure",
        "title": "Configure Telemetry Settings",
        "category": "Ruyi"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ruyi.packages.search",
          "when": "view == ruyiPackagesView",
          "group": "navigation@0"
        },
        {
          "command": "ruyi.packages.clearSearch",
          "when": "view == ruyiPackagesView",
          "group": "navigation@1"
        },
        {
          "command": "ruyi.packages.refresh",
          "when": "view == ruyiPackagesView",
          "group": "navigation@2"
        },
        {
          "command": "ruyi.venv.refresh",
          "when": "view == ruyiVenvsView",
          "group": "navigation@0"
        },
        {
          "command": "ruyi.venv.create",
          "when": "view == ruyiVenvsView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "ruyi.packages.install",
          "when": "view == ruyiPackagesView && viewItem == ruyiPackage.available",
          "group": "inline@1"
        },
        {
          "command": "ruyi.packages.uninstall",
          "when": "view == ruyiPackagesView && viewItem == ruyiPackage.installed",
          "group": "inline@1"
        },
        {
          "command": "ruyi.venv.activate",
          "when": "view == ruyiVenvsView && viewItem == ruyiVenv.itemNonCurrent",
          "group": "inline@1"
        },
        {
          "command": "ruyi.venv.deactivate",
          "when": "view == ruyiVenvsView && viewItem == ruyiVenv.current",
          "group": "inline@1"
        },
        {
          "command": "ruyi.venv.clean",
          "when": "view == ruyiVenvsView && viewItem == ruyiVenv.itemNonCurrent",
          "group": "inline@2"
        }
      ],
      "commandPalette": [
        {
          "command": "ruyi.packages.install",
          "when": "false"
        },
        {
          "command": "ruyi.packages.uninstall",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "ruyi.extract",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Ruyi SDK",
      "properties": {
        "ruyi.checkForUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for Ruyi updates when running detect command."
        },
        "ruyi.ruyiPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to the Ruyi executable. Leave empty to use automatic detection."
        },
        "ruyi.telemetry": {
          "type": "boolean",
          "description": "Enable telemetry collection to help improve RuyiSDK. Leave unset to be prompted on first use."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "release": "bumpp --all --no-commit --no-tag --no-push",
    "package": "vsce package"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/semver": "^7.7.1",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "bumpp": "^10.3.2",
    "changelogithub": "^14.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vsxpub": "^0.1.2"
  },
  "dependencies": {
    "semver": "^7.7.3"
  }
}
