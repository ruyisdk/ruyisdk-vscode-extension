{
  "name": "ruyisdk-vscode-extension",
  "displayName": "RuyiSDK",
  "description": "VS Code integration for the Ruyi package manager.",
  "version": "0.1.0-beta.1",
  "publisher": "RuyiSDK",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ruyisdk/ruyisdk-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/ruyisdk/ruyisdk-vscode-extension/issues"
  },
  "homepage": "https://github.com/ruyisdk/ruyisdk-vscode-extension#readme",
  "engines": {
    "vscode": "^1.88.0"
  },
  "icon": "icon.png",
  "categories": [
    "Other",
    "Programming Languages",
    "Debuggers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ruyi",
          "title": "Ruyi",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "ruyi": [
        {
          "id": "ruyiPackagesView",
          "name": "Packages",
          "icon": "$(package)"
        },
        {
          "id": "ruyiVenvsView",
          "name": "Virtual Environments",
          "icon": "$(server-process)"
        }
      ]
    },
    "commands": [
      {
        "command": "ruyi.setup.detect",
        "title": "Detect Ruyi Installation",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.setup.install",
        "title": "Install RuyiSDK",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.setup.update",
        "title": "Update RuyiSDK",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.setup.manage",
        "title": "Manage RuyiSDK Installations",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.news.search",
        "title": "Search News",
        "category": "Ruyi",
        "icon": "$(search)"
      },
      {
        "command": "ruyi.news.clearSearch",
        "title": "Clear Search",
        "category": "Ruyi",
        "icon": "$(clear-all)"
      },
      {
        "command": "ruyi.news.showCards",
        "title": "Show News Cards",
        "category": "Ruyi",
        "icon": "$(layout)"
      },
      {
        "command": "ruyi.packages.search",
        "title": "Search Packages",
        "category": "Ruyi",
        "icon": "$(search)"
      },
      {
        "command": "ruyi.packages.clearSearch",
        "title": "Clear Package Search",
        "category": "Ruyi",
        "icon": "$(clear-all)"
      },
      {
        "command": "ruyi.packages.install",
        "title": "Install Package",
        "category": "Ruyi",
        "icon": "$(cloud-download)"
      },
      {
        "command": "ruyi.packages.uninstall",
        "title": "Uninstall Package",
        "category": "Ruyi",
        "icon": "$(trash)"
      },
      {
        "command": "ruyi.packages.refresh",
        "title": "Refresh Package List",
        "category": "Ruyi",
        "icon": "$(refresh)"
      },
      {
        "command": "ruyi.venv.refresh",
        "title": "Detect Venvs",
        "category": "Ruyi",
        "icon": "$(refresh)"
      },
      {
        "command": "ruyi.venv.create",
        "title": "Create a New Venv",
        "category": "Ruyi",
        "icon": "$(plus)"
      },
      {
        "command": "ruyi.venv.clean",
        "title": "Remove a Venv",
        "category": "Ruyi",
        "icon": "$(trash)"
      },
      {
        "command": "ruyi.venv.switch",
        "title": "Switch Venvs",
        "category": "Ruyi",
        "icon": "$(device-desktop)"
      },
      {
        "command": "ruyi.extract",
        "title": "Extract RuyiSDK Package",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.setup.manage",
        "title": "Manage RuyiSDK Path",
        "category": "Ruyi"
      },
      {
        "command": "ruyi.telemetry.configure",
        "title": "Configure Telemetry Settings",
        "category": "Ruyi"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ruyi.packages.search",
          "when": "view == ruyiPackagesView",
          "group": "navigation@0"
        },
        {
          "command": "ruyi.packages.clearSearch",
          "when": "view == ruyiPackagesView",
          "group": "navigation@1"
        },
        {
          "command": "ruyi.packages.refresh",
          "when": "view == ruyiPackagesView",
          "group": "navigation@2"
        },
        {
          "command": "ruyi.venv.refresh",
          "when": "view == ruyiVenvsView",
          "group": "navigation@0"
        },
        {
          "command": "ruyi.venv.create",
          "when": "view == ruyiVenvsView",
          "group": "navigation@1"
        }
      ],
      "view/item/context": [
        {
          "command": "ruyi.packages.install",
          "when": "view == ruyiPackagesView && viewItem == ruyiPackage.available",
          "group": "inline@1"
        },
        {
          "command": "ruyi.packages.uninstall",
          "when": "view == ruyiPackagesView && viewItem == ruyiPackage.installed",
          "group": "inline@1"
        },
        {
          "command": "ruyi.venv.clean",
          "when": "view == ruyiVenvsView && viewItem == ruyiVenv.itemNonCurrent",
          "group": "inline"
        }
      ],
      "commandPalette": [
        {
          "command": "ruyi.packages.install",
          "when": "false"
        },
        {
          "command": "ruyi.packages.uninstall",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "ruyi.extract",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Ruyi SDK",
      "properties": {
        "ruyi.checkForUpdates": {
          "type": "boolean",
          "default": true,
          "description": "Automatically check for Ruyi updates when running detect command."
        },
        "ruyi.ruyiPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to the Ruyi executable. Leave empty to use automatic detection."
        },
        "ruyi.telemetry": {
          "type": "boolean",
          "description": "Enable telemetry collection to help improve RuyiSDK. Leave unset to be prompted on first use."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "release": "bumpp --all --no-commit --no-tag --no-push",
    "package": "vsce package"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/semver": "^7.7.1",
    "@types/vscode": "^1.88.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "bumpp": "^10.3.2",
    "changelogithub": "^14.0.0",
    "eslint": "^9.36.0",
    "eslint-plugin-import": "^2.32.0",
    "globals": "^16.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vsxpub": "^0.1.2"
  },
  "dependencies": {
    "semver": "^7.7.3"
  }
}
